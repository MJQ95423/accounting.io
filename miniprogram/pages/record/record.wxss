page {
  background-color: #f1f1f1;
}
.header {
  background-color: #f4ea2a;
  height: 150rpx;
}
.contain {
  height: 650rpx;
  margin-top: -100rpx;
  /* background-color: #f00; */
}
.select {
  background-color: #fff;
  height: 380rpx;
  margin: 0 40rpx;
  border-radius: 40rpx;
  padding-top: 30rpx;
}
.type {
  display: flex;
  width: 250rpx;
  height: 55rpx;
  line-height: 50rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  border: 1px solid #f4ea2a;
  overflow: hidden;
}
.type_item {
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
}
.type .active {
  background-color: #f4ea2a;
}
.swiper_title{
  height: 330rpx;
}
.swiper_item{
  display: flex;
  flex-wrap: wrap;
}
.icon {
  width: 70rpx;
  height: 110rpx;
  margin: 20rpx 33rpx 0 33rpx
}
.icon image {
  width: 100%;
  height: 60%;
  transition: transform .1s;
}
.icon.active image{
  transform: scale(1.15);
}
.icon.active .name{
  transform: scale(1.15);
  font-weight: bold;
  color: #000;
}
.icon .name {
  font-size: 23rpx;
  text-align: center;
  color: #808080;
  transition: transform .1s;
}
.account{
  background-color: #fff;
  border-radius: 30rpx;
  width: 90%;
  height: 180rpx;
  margin-top: 30rpx;
  margin-left: 37rpx;
}
.iconfont{
  padding-top: 20rpx;
  padding-left: 15rpx;
}
.account-title {
  font-size: 28rpx;
  font-weight: bold;
  border-bottom: 1px solid #ededed;
  height: 60rpx;
  padding: 10rpx;
  line-height: 60rpx;
}

.account-title text{
  margin-right: 8rpx;
}

.account-tab{
  padding-top: 20rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  display: flex;
  justify-content: space-between;
}
.account-tab .tab-item{
  font-size: 24rpx;
  background-color: #ededed;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  padding: 0 20rpx;
  color: #999;
}
.account-tab .tab-item.active{
  background-color: #FEDB5A;
  color: #fff;
}

/* 记账信息 */
.info{
  background-color: #fff;
  border-radius: 40rpx;
  margin-top: 30rpx;
  margin-left: 37rpx;
  margin-right: 35rpx;
  padding: 20rpx;
  width: 85%;
}
.info-box{
  display: flex;
  line-height: 60rpx;
}
.info-box .info-title{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}
.info-box .record-date{
  font-size: 28rpx;
}
.info-input{
  width: calc(100% - 80rpx);
}
.info-input input{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
/* 保存按钮 */
.save-box{
  position: relative;
  width: 90%;
  height: 80rpx;
  margin: 60rpx auto;
  border-radius: 20rpx;
}
.save{
  width: 100%;
  height: 80rpx;
  background-color: #FEDB5A;
  margin: 60rpx auto;
  line-height: 80rpx;
  text-align: center;
  border-radius: 20rpx;
}
.btn{
  position: absolute;
  top: 0;
  left: 0;
  width: 100% !important;
  height: 80rpx !important;
  border-radius: 20rpx;
  padding: 0;
  background-color: transparent;
}
